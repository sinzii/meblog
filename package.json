{
  "name": "meblog",
  "version": "1.0.0",
  "description": "A DIY blog engine",
  "scripts": {
    "dev:serve": "npx gulp -f gulpfile.ts --series cleanCache dev serve",
    "prod:serve": "npx gulp -f gulpfile.ts --series cleanCache dev prod serve",
    "dev:build": "npx gulp -f gulpfile.ts --series cleanCache dev build",
    "prod:build": "npx gulp -f gulpfile.ts --series cleanCache prod build",
    "clean:cache": "npx gulp -f gulpfile.ts --series cleanCache",
    "dev:clean:build": "npx gulp -f gulpfile.ts --series dev clean",
    "prod:clean:build": "npx gulp -f gulpfile.ts --series prod clean",
    "dev:clean:posts": "npx gulp -f gulpfile.ts --series dev cleanPosts",
    "prod:clean:posts": "npx gulp -f gulpfile.ts --series prod cleanPosts",
    "dev:sample": "npx gulp -f gulpfile.ts --series dev generateSamplePosts",
    "prod:sample": "npx gulp -f gulpfile.ts --series prod generateSamplePosts",
    "dev:newPost": "npx gulp -f gulpfile.ts --series dev newPost",
    "prod:newPost": "npx gulp -f gulpfile.ts --series prod newPost",
    "test": "npx mocha --require ts-node/register \"./test/**/*.test.@(js|ts)\""
  },
  "author": "@sinzii",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/debug": "^4.1.5",
    "@types/faker": "^5.5.5",
    "@types/gulp": "^4.0.8",
    "@types/lodash": "^4.14.170",
    "@types/markdown-it": "^12.0.1",
    "@types/markdown-it-emoji": "^2.0.1",
    "@types/mocha": "^8.2.2",
    "@types/moment": "^2.13.0",
    "@types/sinon": "^10.0.0",
    "browser-sync": "^2.26.14",
    "chai": "*",
    "mocha": "^8.4.0",
    "sinon": "^10.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "del": "^6.0.0",
    "faker": "^5.5.3",
    "glob": "^7.1.7",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-clean-css": "^4.3.0",
    "gulp-sass": "^4.1.0",
    "gulplog": "^1.0.0",
    "highlight.js": "^10.7.2",
    "lodash": "^4.17.21",
    "markdown-it": "^12.0.6",
    "markdown-it-emoji": "^2.0.0",
    "minimist": "^1.2.5",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "pug": "^3.0.2",
    "through2": "^4.0.2",
    "vinyl": "^2.2.1"
  }
}
