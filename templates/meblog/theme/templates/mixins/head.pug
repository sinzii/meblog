mixin common-meta-tags
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')

mixin favicon-and-appicons
    link(rel='shortcut icon' href=url('/favicon.ico'))
    link(rel='icon' type='image/png' sizes='16x16' href=url('/images/favicon-16x16.png'))
    link(rel='icon' type='image/png' sizes='32x32' href=url('/images/favicon-32x32.png'))
    link(rel='icon' type='image/png' sizes='96x96' href=url('/images/favicon-96x96.png'))

mixin common-og-tags(title)
    meta(property='og:site_name' content=siteName)
    meta(property='og:title' content=title)
    meta(property='og:image' content=sharingImage)
    meta(property='og:type' content=sharingOgType)
